#include <dt-bindings/zmk/mouse.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

/* Layer definitions for Miryoku layout */

#define BASE   0
#define NAV    1
#define MOUSE  2
#define MEDIA  3
#define NUM    4
#define SYM    5
#define FUN    6

&sl {
    release-after-ms = <1000>;
    quick-release;  // <--- Just this line. No "tap".
};

&sk { quick-release; };

/ {
    behaviors {
        /* Home Row Mods*/

        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };

        /* Thumb layer keys */

        lt: layer_tap {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            flavor = "tap-preferred";
            bindings = <&mo>, <&kp>;
        };
    };

    combos {
        compatible = "zmk,combos";

        semicolon {
            bindings = <&kp SEMICOLON>;
            key-positions = <32 33>;
            layers = <0>;
        };

        Kpress {
            bindings = <&kp K>;
            key-positions = <31 32>;
            layers = <0>;
        };

        VPress {
            bindings = <&kp V>;
            key-positions = <27 28>;
            layers = <0>;
        };

        ToNav {
            bindings = <&to 5>;
            key-positions = <37 40>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        /* Layer 0: BASE - Miryoku Colemak-DHm */

        default_layer {
            display-name = "VLayer";
            bindings = <
&kp TAB    &kp Q  &kp W       &kp F               &kp P           &kp B             &kp J  &kp L            &kp U                &kp Y                &kp SEMICOLON  &kp C_MUTE
&kp LCTRL  &kp A  &hm RALT R  &hm LEFT_CONTROL S  &hm LEFT_WIN T  &kp G             &kp M  &hm RIGHT_GUI N  &hm RIGHT_CONTROL E  &hm RALT I           &kp O          &kp C_VOL_UP
&kp ESC    &kp Z  &kp X       &kp C               &kp D           &kp V             &kp K  &kp H            &kp COMMA            &hm EXCLAMATION DOT  &kp FSLH       &kp C_VOL_DN
                              &kp ESC             &kp SPACE       &sk LEFT_SHIFT    &to 2  &to 1            &to 6
            >;
        };

        symbollayer {
            display-name = "SymLayer";
            bindings = <
&none  &kp EXCLAMATION  &kp AT_SIGN  &kp HASH           &kp DOLLAR    &kp PRCNT         &kp MINUS  &kp PLUS       &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &to 6          &none
&none  &kp TAB          &kp EQUAL    &kp DOUBLE_QUOTES  &kp SQT       &kp QUESTION      &kp COLON  &kp SEMICOLON  &kp LEFT_BRACE        &kp RIGHT_BRACE        &kp BACKSPACE  &none
&none  &kp ESC          &kp CARET    &kp AMPERSAND      &kp ASTERISK  &kp GRAVE         &kp BSLH   &kp SLASH      &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp ENTER      &none
                                     &trans             &to 0         &sk LEFT_SHIFT    &sk RCTRL  &to 2          &to 6
            >;
        };

        num_layer {
            display-name = "NumLayer";
            bindings = <
&none  &none    &kp N7        &kp N8        &kp N9        &kp DOT             &kp MINUS      &kp PG_UP  &kp UP_ARROW  &kp PG_DN  &none          &none
&none  &kp TAB  &kp N4        &kp N5        &kp N6        &kp N0              &kp PLUS       &kp LEFT   &kp DOWN      &kp RIGHT  &kp BACKSPACE  &none
&none  &kp ESC  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp COMMA           &kp EQUAL      &kp HOME   &kp CAPS      &kp END    &kp RET        &none
                              &trans        &to 0         &lt 3 LEFT_SHIFT    &sk RIGHT_GUI  &to 1      &to 6
            >;
        };

        mouse_layer {
            display-name = "Mouse";
            bindings = <
&trans  &trans    &trans    &trans     &trans     &trans    &none   &none           &mkp LCLK       &mkp RCLK     &none            &trans
&trans  &kp LGUI  &kp LALT  &kp LCTRL  &kp LSHFT  &trans    &trans  &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_UP  &mmv MOVE_RIGHT  &trans
&trans  &trans    &trans    &trans     &trans     &trans    &trans  &msc SCRL_LEFT  &msc SCRL_DOWN  &msc SCRL_UP  &msc SCRL_RIGHT  &trans
                            &trans     &to 0      &trans    &trans  &trans          &trans
            >;
        };

        media_layer {
            display-name = "Media";
            bindings = <
&bootloader  &none     &none     &none      &none      &none     &none   &none       &none         &none         &none       &none
&none        &kp LGUI  &kp RALT  &kp LCTRL  &kp LSHFT  &none     &none   &kp C_PREV  &kp C_VOL_DN  &kp C_VOL_UP  &kp C_NEXT  &none
&none        &none     &none     &none      &none      &none     &none   &none       &none         &none         &none       &none
                                 &trans     &to 0      &trans    &trans  &trans      &trans
            >;
        };

        NavLayer {
            bindings = <
&trans  &trans  &kp N7  &kp N8  &kp N9  &trans       &trans         &kp V          &kp UP    &trans     &trans  &trans
&trans  &trans  &kp N4  &kp N5  &kp N6  &kp N0       &trans         &kp LEFT       &kp DOWN  &kp RIGHT  &trans  &trans
&trans  &trans  &kp N1  &kp N2  &kp N3  &trans       &trans         &trans         &trans    &trans     &trans  &trans
                        &trans  &to 0   &sk RSHFT    &sk RIGHT_WIN  &sk RIGHT_ALT  &none
            >;
        };

        fun_layer {
            display-name = "Function";
            bindings = <
&none  &kp F12  &kp F7  &kp F8  &kp F9  &none     &none   &none      &none      &none     &studio_unlock  &bootloader
&none  &kp F11  &kp F4  &kp F5  &kp F6  &none     &none   &kp RSHFT  &kp RCTRL  &kp RALT  &kp RGUI        &none
&none  &kp F10  &kp F1  &kp F2  &kp F3  &none     &none   &none      &none      &none     &none           &none
                        &trans  &to 0   &trans    &trans  &trans     &trans
            >;
        };
    };

    conditional_layers { compatible = "zmk,conditional-layers"; };
};
